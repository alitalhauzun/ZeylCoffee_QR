    const weeklySection = document.getElementById('weeklySection');
    const campaignsSection = document.getElementById('campaignsSection');
    const categoriesNav = document.getElementById('categoriesNav');
    const menuContainer = document.getElementById('menuContainer');

    function scrollToCategory(categoryId) {
      currentCategory = categoryId;
      
      // ƒ∞statistik kaydet
      const categoryElement = document.querySelector(`[data-category-id="${categoryId}"]`);
      const categoryName = categoryElement ? categoryElement.textContent.trim() : 'Bilinmeyen';
      
      fetch('/api/track-click', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          categoryId: categoryId,
          categoryName: categoryName
        })
      }).catch(err => console.error('ƒ∞statistik kaydedilemedi:', err));
      
      // T√ºm kategorileri gizle
      categorySections.forEach(section => {
        section.classList.add('hidden');
      });

      // Sadece se√ßili kategoriyi g√∂ster
      const targetSection = document.getElementById('category-' + categoryId);
      if (targetSection) {
        targetSection.classList.remove('hidden');
      }

      // Weekly section'ƒ± gizle
      if (weeklySection) {
        weeklySection.classList.add('hidden');
      }

      // Campaigns section'ƒ± gizle
      if (campaignsSection) {
        campaignsSection.classList.add('hidden');
      }

      // Ana men√ºye d√∂n butonunu g√∂ster
      backBtn.classList.add('show');

      // Men√º container'a scroll
      setTimeout(() => {
        menuContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }, 100);
    }

    function backToMenu() {
      currentCategory = null;
      
      // T√ºm kategori b√∂l√ºmlerini gizle
      categorySections.forEach(section => {
        section.classList.add('hidden');
      });

      // Weekly section'ƒ± g√∂ster
      if (weeklySection) {
        weeklySection.classList.remove('hidden');
      }

      // Campaigns section'ƒ± g√∂ster
      if (campaignsSection) {
        campaignsSection.classList.remove('hidden');
      }

      // Ana men√ºye d√∂n butonunu gizle
      backBtn.classList.remove('show');

      // Kategori butonlarƒ±na scroll
      categoriesNav.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // Aktif kategori vurgusu
    const categoryButtons = document.querySelectorAll('.category-btn');
    categoryButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        categoryButtons.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
      });
    });
  
    // Sayfa y√ºklenince t√ºm kategorileri gizle, sadece weekly ve campaigns g√∂ster
    window.addEventListener('DOMContentLoaded', function() {
      categorySections.forEach(section => {
        section.classList.add('hidden');
      });
      
      if (weeklySection) {
        weeklySection.classList.remove('hidden');
      }
      
      if (campaignsSection) {
        campaignsSection.classList.remove('hidden');
      }
      
      if (backBtn) {
        backBtn.classList.remove('show');
      }
      
      categoryButtons.forEach(btn => {
        btn.classList.remove('active');
      });
    });

    // Instagram Feed - Zeyl Coffee
    const instagramPosts = (<%- JSON.stringify(instagramPosts || []) %>).map(post => ({
      image: '/' + (post.image || ''),
      caption: post.caption || '',
      link: 'https://www.instagram.com/zeylcafe/'
    }));

    // Instagram slider'ƒ± olu≈ütur
    function createInstagramSlider() {
      const sliderContainer = document.getElementById('instagramSlider');
      if (!sliderContainer) return;

      // Postlarƒ± karƒ±≈ütƒ±r ve slider'a ekle
      const shuffledPosts = instagramPosts.sort(() => 0.5 - Math.random());
      
      shuffledPosts.forEach((post, index) => {
        const postElement = document.createElement('div');
        postElement.className = 'instagram-post';
        postElement.innerHTML = `
          <img src="${post.image}" alt="Instagram Post ${index + 1}" loading="lazy">
        `;
        
        postElement.addEventListener('click', () => {
          window.open(post.link, '_blank');
        });
        
        sliderContainer.appendChild(postElement);
      });

      // Otomatik kaydƒ±rma
      let scrollInterval;
      let scrollDirection = 1;
      
      
      function startAutoScroll() {
        // Mobilde otomatik kaydƒ±rma olmasƒ±n
        if (window.innerWidth <= 768) {
          if (scrollInterval) {
            clearInterval(scrollInterval);
            scrollInterval = null;
          }
          return;
        }

        // Masa√ºst√ºnde otomatik kaydƒ±rmayƒ± yeniden ba≈ülat
        if (scrollInterval) {
          clearInterval(scrollInterval);
        }

        const maxScroll = sliderContainer.scrollWidth - sliderContainer.clientWidth;
        if (maxScroll <= 0) return;

        scrollInterval = setInterval(() => {
          const currentScroll = sliderContainer.scrollLeft;

          if (currentScroll >= maxScroll - 1) {
            scrollDirection = -1;
          } else if (currentScroll <= 0) {
            scrollDirection = 1;
          }

          sliderContainer.scrollLeft += scrollDirection * 2;
        }, 50);
      }

function stopAutoScroll() {
        clearInterval(scrollInterval);
      }
      
      // Mouse √ºzerine gelince dur, ayrƒ±lƒ±nca devam et
      sliderContainer.addEventListener('mouseenter', stopAutoScroll);
      sliderContainer.addEventListener('mouseleave', startAutoScroll);
      
      // Sayfa y√ºklenince otomatik kaydƒ±rmayƒ± ba≈ülat
      setTimeout(startAutoScroll, 2000);
    }

    // Instagram slider'ƒ± ba≈ülat
    createInstagramSlider();
  </script>
